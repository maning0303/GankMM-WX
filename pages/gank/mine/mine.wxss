/* pages/gank/mine/mine.wxss */
Page {
  background: whitesmoke;
}
.mine_root{
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
}

.userinfo {
  height: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-left: 30rpx;
  color: #333333;
  font-size: 32rpx;
}

.bottom_version_view{
  position: absolute;
  bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-self: center;
  align-items: center;
  justify-content: center;
}

.bottom_version_view text{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: gray;
}

.item_view{
  margin-top: 20rpx;
  width: 100%;
  background-color: white;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item_view_left{
  width: 100%;
  background-color: white;
  height: 100%;
  display: flex;
  align-items: center;
}

.image_left{
  margin-left: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.image_right{
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.item_view text{
  font-size: 30rpx;
  color: #333333;
  margin-left: 20rpx;
}