/* pages/gank/girl/girl.wxss */

.girl_root{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.class_girl_view{
  width: 100%;
  height: 100%;
  padding-right: 2%;
  padding-bottom: 10rpx;
  background-color: whitesmoke;
  display: flex;
  flex-wrap: wrap;
}

.item_view{
  margin-left: 2%;
  margin-top: 2%;
  width: 47%;
  height: 400rpx;
  background-color: lightgray;
  position: relative;
}

.item_time{
  position: absolute;
  width: 100%;
  height: 20%;
  background-color:#000000;
  opacity: 0.6;
  bottom: 0px;
  display: flex;
  align-items: center;
}

.item_time text{
  color: white;
  font-size: 24rpx;
  margin-left: 20rpx;
}